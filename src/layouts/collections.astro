---
import Layout from "@/layouts/layout.astro";
import { ArrowLeft } from "lucide-astro";
import Card from "@/components/ui/card.astro";
import Button from "@/components/ui/button.astro";

const { page } = Astro.props;
---

<Layout
  title="collections | slanted.dev"
  pageDesc="An assorted collection of useful goodies."
>
  <div class="space-y-2">
    <button>
      <a href="/" class="flex hover:underline"><ArrowLeft /> Go back</a>
    </button>
    <Card>
      <h2
        class="inline-block bg-gradient-to-r from-highlight-muted to-highlight-dark bg-clip-text text-5xl text-transparent dark:to-highlight"
      >
        Collections
      </h2>
      <p>An assorted collection of useful goodies.</p>
    </Card>
    <div class="grid gap-2 md:grid-cols-3 md:gap-3">
      <Button className="w-full" href="/collections/libraries" target="_self">
        Libraries
      </Button>
      <Button className="w-full" href="/collections/resources" target="_self">
        Resources
      </Button>
      <Button className="w-full" href="/collections/tools" target="_self">
        Tools
      </Button>
    </div>
    <slot />
  </div>
</Layout>
