---
import CollectionsLayout from "@/layouts/collections.astro";
import CollectionItem from "@/components/collectionItem.astro";
import { tools } from "@/data/collections/tools";
---

<CollectionsLayout>
  {
    tools
      .sort((a, b) => {
        if (a.name.toLowerCase() < b.name.toLowerCase()) return -1;
        if (a.name.toLowerCase() > b.name.toLowerCase()) return 1;

        return 0;
      })
      .map((item) => <CollectionItem item={item} />)
  }
</CollectionsLayout>
