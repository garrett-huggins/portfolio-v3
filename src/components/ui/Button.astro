---
import { cn } from "@/utils/cn";
interface Props {
  href?: string;
  className?: string;
  onClick?: () => void;
}
const { href, className } = Astro.props;
---

{
  href ? (
    <a href={href} target="_blank">
      <button
        class={cn(
          "rounded-lg border-2 border-accent bg-primary p-2  hover:bg-accent dark:border-d-accent dark:bg-d-primary hover:dark:bg-d-accent",
          className,
        )}
      >
        <slot />
      </button>
    </a>
  ) : (
    <button
      class={cn(
        "rounded-lg border-2 border-accent bg-primary p-2  hover:bg-accent dark:border-d-accent dark:bg-d-primary hover:dark:bg-d-accent",
        className,
      )}
    >
      <slot />
    </button>
  )
}
