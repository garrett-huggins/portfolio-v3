---
import DarkmodeToggle from "./darkmode.astro";
import MobileMenu from "./mobile-menu";

const currentPath = Astro.url.pathname;
---

<header class="mx-auto flex max-w-screen-xl items-center justify-between p-4">
  <a href="/">
    <h1
      class="text-2xl font-bold hover:text-primary hover:underline dark:hover:text-d-primary"
    >
      slanted.dev
    </h1></a
  >
  <div class="flex h-full items-center">
    <DarkmodeToggle />
    <!-- button to open up # nav to the different sections -->
    <MobileMenu path={currentPath} client:load />
  </div>
</header>
